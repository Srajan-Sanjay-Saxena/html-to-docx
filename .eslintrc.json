{
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "ignorePatterns": "dist/**/*.js",
  "rules": {
    "prettier/prettier": ["error"],
    "default-case": "off",
    "import/no-cycle": "off",
    "no-param-reassign": "off", 
    "no-nested-ternary": "off",
    "import/extensions": ["error", "ignorePackages", { "js": "always", "jsx": "never", "ts": "never", "tsx": "never" }]
  }
}
